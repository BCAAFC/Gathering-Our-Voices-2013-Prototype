                  )

              // Fax Number Field
              .control-group
                label.control-label Fax
                .controls
                  input.focused(
                    type='text',
                    ng-model='primaryContact.extendedInfo.faxNumber',
                    placeholder="Enter your fax number.",
                    ui-jq='popover',
                    ui-options="{trigger: 'focus', placement: 'bottom'}",
                    data-content="(123) 123-1234"
                  )
