!!!
html
	head
		title Gathering Our Voices
		meta(http-equiv="Content-Type",content="text/html; charset=UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="Gathering Our Voices is an annual conference in BC for Aboriginal Youth. This years confernce theme will focus on Health and will be held from March 19-22, 2013 in Penticton, BC.")
		meta(name="author", content="Andrew Hobden")
		// HTML5 shim, because IE's are horrible.
		//if lt IE 9
			script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')

		// Get the CSS.
		link(rel="stylesheet", type="text/css", href="/css/bootstrap.min.css")
		link(rel="stylesheet", type="text/css", href="/css/select2.css")
		!= css('layout')
		link(rel="stylesheet", type="text/css", href="/css/responsive.min.css")
		link(rel="stylesheet", type="text/css", href="/css/style.css")
		link(rel="stylesheet", type="text/css", href="/css/select2.css")

	body
		// Navbar. This does not need a container.
		.navbar.navbar-fixed-top
			.navbar-inner
				a.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
					span.icon-bar
					span.icon-bar
					span.icon-bar
				.container-fluid
					.pull-right
						a.brand Gathering Our Voices
					.nav-collapse
						ul.nav
							li
								a(href='/home')
									i.icon-home
									| Home
							li
								a(href='/register')
									i.icon-edit
									| Register
							li
								a(href="/privacy")
									i.icon-eye-open
									| Privacy Policy
						
		// Main Container. Nothing other then floats should be outside of this.
		.container
			// Logo Row.
			// -- This is the top of the page, it containers things that the entire application will be using.
			.row
				.span10.offset2
					.row
						.span7.well
							.span4(style="text-align: center;")
								img(src="/img/gov_logo.png")
							.span2
								img.hidden-phone(src="/img/bcaafclogo.png")
								img.hidden-phone(src="/img/fc_logo.png")
				
		// Article Row
		// -- This is the main content which Angular JS replaces during ng-view
		#article(ng-view)
			.container-fluid
				.row-fluid
					.span5
					.well.span2
						p Please give us a moment while the data loads!

	// Load the javascript at the end of the page, it's faster apparently (As said in the Bootstrap official templates.)
	// Use a CDN if we can
	script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js")
	script
		window.jQuery || document.write('<script src="/js/jquery.min.js"><\/script>')
	
	// Bootstrap only
	script(type="text/javascript", src="/js/bootstrap.min.js")
	// Angular JS specific
	script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.2/angular.min.js")
	script
		window.angular || document.write('<script src="/js/angular/angular-1.0.1.min.js"><\/script>')
	script(type="text/javascript", src="/js/angular-ui.js")
	!= js('app')
	!= js('controllers')
	!= js('directives')
	!= js('services')
	script(type="text/javascript", src="/js/select2.min.js")
	script(type="text/javascript", src="/js/jquery.maskedinput.js")
	script(type="text/javascript")
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-35619549-1']);
			_gaq.push(['_trackPageview']);

			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();
	script(type="text/javascript")
		angular.bootstrap(document, ['gov']);
